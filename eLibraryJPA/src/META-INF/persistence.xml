<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="eLibrary" transaction-type="JTA">
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	<jta-data-source>java:/eLibrary</jta-data-source>
		<class>entities.Account</class>
		<class>entities.Author</class>
		<class>entities.Book</class>
		<class>entities.BookFile</class>
		<class>entities.BookFilePK</class>
		<class>entities.Category</class>
		<class>entities.Format</class>
		<class>entities.Language</class>
		<class>entities.Publisher</class>
		<class>entities.User</class>
		<properties>
			<property name='eclipselink.ddl-generation' value="create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
